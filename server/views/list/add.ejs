<%- include ../partials/header.ejs %>

<!-- Content for the Add Page   -->
<body style="background-color: #D1C0A8"> <!-- This is the background color for the whole page-->
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1> <!-- This is the title of the page -->
                <form class+"form" method="post"> <!-- This is the form for the page -->
                    <!-- form spot for the name of the new entry-->
                    <div class="form-group"> 
                    <label for="itemTextField" style="color:black">New Entry</label>
                    <input type="text" class="form-control" 
                    id="itemTextField"
                    placeholder="What needs to be done?"
                    name="item" required>
                    </div>
                    
                    <!-- form spot for the description of the new entry-->
                    <div class="form-group">
                    <label for="descTextField" style="color:black">Description</label>
                    <textarea type="text" class="form-control" 
                    id="descTextField"
                    placeholder="Give some more detail"
                    name="description" required></textarea>
                    </div>

                    <!-- form spot for the date of the new entry-->
                    <div class="form-group">
                    <label for="whenTextField" style="color:black">Completion Date/Time</label>
                    <input type="text" class="form-control" 
                    id="whenTextField"
                    placeholder="When does this need to be done?"
                    name="when" required>
                    </div>
                    <br>
                    <button class="btn btn-primary" type="submit"> <!--Submit button-->
                        <i class="fas fa-edit"></i>Submit
                    </button>

                    <a href="/show-list" class="btn btn-warning>
                        <i class="fas fa-undo"></i>Cancel</a> <!--Cancel button-->
                </form>
            </div>
        </div>
    </div>
</body>

